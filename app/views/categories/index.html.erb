<%= stylesheet_link_tag "categories", media: "all", "data-turbolinks-track" => "reload" %>

<h1>Product categories</h1>
<% @categories.each do |category| %>
<div class="row">
    <div class="categories-info panel panel-default col-md-3">
        <div class="panel-heading"><%= link_to category.name, category%></div>
        <div class="panel-body">
            <%= image_tag(category.image_url, :class => 'img-rounded category_img') %>
            <div class="description well"><%= category.description %></div>
        </div>
    </div>
</div>
<% end %>

